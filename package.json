{
    "name": "gitbook-plugin-thumbnail",
    "description": "Thumbnail metadata for your gitbook",
    "homepage": "https://github.com/AgileBits/gitbook-plugin-thumbnail",
    "author": "Mitchell Cohen <mitch@agilebits.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/AgileBits/gitbook-plugin-thumbnail.git"
    },
    "license": "Apache-2.0",
    "version": "1.0.2",
    "engines": {
        "gitbook": "*"
    },
    "gitbook": {
        "properties": {
            "path": {
                "type": "string",
                "description": "Thumbnail file",
                "default": "cover_small.png"
            }
        }
    }
}